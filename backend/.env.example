# Environment Variables - Backend

# Database
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://stia_crm:dev_password_change_in_production@localhost:5432/stia_crm?schema=public"

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# JWT Authentication
# IMPORTANT: Change these secrets in production! Use long random strings.
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-use-long-random-string
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-use-long-random-string
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# CORS Configuration
# Frontend URL (comma-separated for multiple origins)
CORS_ORIGIN=http://localhost:5173,http://localhost:5174

# Redis (Optional - for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password-if-needed

# SAP Business One Integration (Optional)
# SAP_API_URL=https://your-sap-server:50000/b1s/v1
# SAP_COMPANY_DB=SBODEMOUS
# SAP_USERNAME=manager
# SAP_PASSWORD=your-sap-password
# SAP_SESSION_TIMEOUT=30

# Email Configuration (Future)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Logging
LOG_LEVEL=info
# Options: trace, debug, info, warn, error, fatal

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15m

# File Upload (Future)
# MAX_FILE_SIZE=10485760
# UPLOAD_PATH=./uploads
